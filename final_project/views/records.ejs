<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
    }

    table {
        width: 100%;
    }
</style>

<body>
    <h1><%= title %></h1>
    <table style="text-align: center;">
        <tr>
            <th>
                Type
            </th>
            <th>
                Input
            </th>
            <th>
                Cases
            </th>
        </tr>
        <% for(var i=0; i < records.length; i++) { %>
        <tr>
            <td><%= records[i].type.toUpperCase() %></td>
            <td><%= records[i].input %></td>
            <td><%= records[i].cases %></td>
        </tr>
        <% } %>
    </table>
    <a href="/">Back</a>
</body>

</html>